<div class="min-h-screen bg-sky-600 flex justify-center items-center">
	<div class="absolute w-60 h-60 rounded-xl bg-sky-500 -top-5 -left-16 z-0 transform rotate-45 hidden md:block">
	</div>
	<div class="absolute w-48 h-48 rounded-xl bg-sky-500 -bottom-6 -right-10 transform rotate-12 hidden md:block">
	</div>

<div class='py-12 px-5 bg-white rounded-2xl shadow-xl z-20 md:px-12'>
		<div>
			<h2 class="text-3xl font-bold text-center mb-4 -mt-4 cursor-pointer">Log In</h2>
		</div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: "block text-sm py-3 px-4 rounded-lg w-full border outline-none mb-4" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: 'password', class: "block text-sm py-3 px-4 rounded-lg w-full border outline-none mb-4" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: 'text-white mt-4 bg-gradient-to-br from-purple-600 to-blue-500 hover:bg-gradient-to-b focus:ring-2 focus:outline-none focus:ring-blue-300 dark:focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2' %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>
		<div class="w-40 h-40 absolute bg-sky-500 rounded-full top-0 right-12 hidden md:block"></div>
		<div
			class="w-20 h-40 absolute bg-sky-500 rounded-full bottom-20 left-10 transform rotate-45 hidden md:block">
		</div>
</div>