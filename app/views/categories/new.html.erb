<%= render partial: "shared/navbar" %>
<div class="h-screen bg-gray-200 flex justify-center items-center">
<div class='py-12 px-5 bg-white rounded-2xl shadow-xl z-20 md:px-12'>
	<div>
		<h2 class="text-3xl font-bold text-center mb-4 cursor-pointer">Add a new category</h2>
	</div>
<%= form_with model: @category, url: categories_path, method: :post, data: { turbo: false } do |f| %>
  <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: 'Category Name', class: "block text-sm py-3 px-4 rounded-lg w-full border outline-none mb-4"%>
  <%= f.text_field :icon, autofocus: true, autocomplete: "icon", placeholder: 'Icon Link', class: "block text-sm py-3 px-4 rounded-lg w-full border outline-none mb-4"%>
  <%= f.submit 'Create', class: "py-3 w-80 text-l text-white bg-sky-600 rounded-2xl hover:bg-sky-700 duration-150 ease-in-out"%>
<% end %>
</div>
</div>